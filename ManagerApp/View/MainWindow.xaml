<Window
    x:Class="ManagerApp.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ManagerApp.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:ManagerApp.ViewModel"
    Title="MainWindow"
    Width="800"
    Height="450"
    Background="White"
    Style="{StaticResource MaterialDesignWindow}"
    mc:Ignorable="d">
    <Grid>
        <local:LoginV x:Name="loginV" Visibility="Visible" />
        <local:ProductV x:Name="productV" Visibility="Collapsed" />
    </Grid>
</Window>
