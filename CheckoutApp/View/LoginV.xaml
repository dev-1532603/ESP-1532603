<UserControl
    x:Class="CheckoutApp.View.LoginV"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CheckoutApp.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:CheckoutApp.ViewModel"
    Name="loginV"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodel:LoginVM}"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:Card
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            Padding="30"
            Background="White"
            UniformCornerRadius="12">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <!--  Header  -->
                <StackPanel
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="{DynamicResource PrimaryHueMidBrush}"
                        Text="Super Cchic" />
                </StackPanel>

                <!--  Username Field  -->
                <TextBox
                    Width="250"
                    Margin="0,5"
                    materialDesign:HintAssist.Hint="Nom d'utilisateur"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Username}" />

                <PasswordBox
                    Width="250"
                    Margin="0,10,0,5"
                    materialDesign:HintAssist.Hint="Mot de passe"
                    materialDesign:PasswordBoxAssist.Password="{Binding Password}"
                    Style="{StaticResource MaterialDesignOutlinedPasswordBox}" />

                <!--  Login Button  -->
                <Button
                    Width="250"
                    Height="40"
                    Margin="0,15,0,5"
                    Background="{DynamicResource PrimaryHueMidBrush}"
                    Command="{Binding LoginCommand}"
                    Content="Connexion"
                    Foreground="Black"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
